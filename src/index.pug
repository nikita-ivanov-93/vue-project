extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container
        header.header
          a(href="#").logo ВА
          nav.menu
            - let menuItems = ['Обо мне','Навыки','Работы','Отзывы']
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href='#').menu__link #{item}
          - let socials = ['insta', 'github', 'vk', 'envelope']
          ul.socials
            each item in socials
              li.socials__item
                a(href="#").socials__link
                  +icon(item, 'social__icon')
        .userinfo
          .userinfo__title Личный сайт #[br] веб-разработчика
          .userinfo__name Владимир Астаханов
        .hero__button
          .scroll-down
            button.scroll-down__btn Скролл
            +icon('scroll', 'scroll-down__icon')
    section.about
      .container.about__container 
        .about__user  
          .user
            .user__avatar
              .user__avatar-inner 
                +image("content/user.jpg", 'user__avatar-pic')   
            .user__data  
              - 
                let userInfo = [
                  ["Проживаю:","Новосибирск"],
                  ["Возраст:","27 лет"],
                  ["Родился:","1 января 1991"],
                ];

              table.user__table  
                each item in userInfo
                  tr.user__data-row 
                    td.user__data-title #{item[0]} 
                    td.user__data-content #{item[1]}
        .about__content 
          .about__desc Привет, меня зовут
          .about__title Владимир Астаханов
          .about__text Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
          .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
  .triangles.triangles--top
    svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--left
      polygon(points="0,0 0,100 1000,100")
    svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--right
      polygon(points="0,100 1000,100 1000,0")
  .middle-section
    section.values
      .container.values__container 
        .values__wrapper  
          .values__title 
            .values__title-text Чем я могу быть полезен вам
            .values__desc Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво! 
          .values__skills 
            - 
              let hardSkills = [
                ["Front-end", ['HTML5','CSS3','Javascript','Jquery и Vue.js']],
                ['Workflow', ['GIT','Terminal','Gulp','Webpack']]
              ];

            ul.skills 
              each category in hardSkills
                li.skills__category 
                  .skills-row
                    .skills-row__title #{category[0]}
                    ul.skills-row__list 
                      each skill in category[1]
                        li.skills-row__item 
                          .skill
                            svg(viewBox="0 0 100 100").skill__circle-shape
                              circle(cx="50" cy="50" r="40").skill__circle.skill__circle--layer--under
                              circle(cx="50" cy="50" r="40" stroke="url(#gradient)" transform="rotate(180 50 50)").skill__circle.skill__circle--layer--above
                              linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                                stop(offset="0%" stop-color="#5500f2")
                                stop(offset="100%" stop-color="#8f00ef")
                            .skill__title #{skill}
    section.works
      .container.works__container
        .section-title.works__section-title Мои работы
        .works__content
          .works-preview
            .works-preview__pics
              +image('content/slider-1.jpg', 'works-preview__fullpic')
              .works-preview__thumbs
                ul.thumbs
                  - for (var i = 4; i > 0; i--)
                    li.thumbs__item(class=`${i === 1 ? 'active' : ''}`)
                      a(href="#").thumbs__link
                        +image(`content/slider-${i}.jpg`, 'thumbs__pic')
              .works-preview__btns
                .square-btns
                  a(href="#").square-btns__btn.square-btns__btn--next
                  a(href="#").square-btns__btn.square-btns__btn--prev
            .works-preview__info
              - var tags = ['HTML', 'CSS', 'JavaScript'];
              ul.tags
                each item in tags
                  li.tags__item 
                    .tag #{item}
              .works-preview__title Сайт школы образования
              .works-preview__desc
                p Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
              a(href="#").iconed-link Посмотреть сайт
  .triangles.triangles--bottom
    svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--left
      polygon(points="0,0 1000,0 1000,100")
    svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--right
      polygon(points="0,0 0,100 1000,0")
