extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container
        header.header
          a(href="#").logo ВА
          nav.menu
            - const menuItems = ['Обо мне','Навыки','Работы','Отзывы']
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href='#').menu__link #{item}
          - const socials = ['insta', 'github', 'vk', 'envelope']
          ul.socials
            each item in socials
              li.socials__item
                a(href="#").socials__link
                  +icon(item, 'social__icon')
        .userinfo
          .userinfo__title Личный сайт #[br] веб-разработчика
          .userinfo__name Владимир Астаханов
        .hero__button
          .scroll-down
            button.scroll-down__btn Скролл
            +icon('scroll', 'scroll-down__icon')
            
        