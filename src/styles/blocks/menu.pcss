.menu {
  display: flex;
  margin-right: 150px;
  .menu__list {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    .menu__item {
      margin-right: 60px;
      &:last-child {
        margin-right: 0;
      }
      .menu__link {
        text-decoration: none;
        &:hover {
          font-weight: 600;
        }
        &:active {
          color: #5500F2;
        }

      }
    }
  }
}
