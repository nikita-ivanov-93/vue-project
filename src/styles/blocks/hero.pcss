.hero__container {
    height: 100vh;
    padding: 3% 4% 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    @include desktop {
        padding: 54px 0 20px;
    }
    @include tablets {
        justify-content: flex-start;
    }
    .hero__button {
        display: flex;
        @include tablets {
            display: none;
        }
    }
}