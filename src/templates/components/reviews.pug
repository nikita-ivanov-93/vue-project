script(type="text/x-template")#slider-container
 .slider
    .slider__header
      .slider__title.section-title Что обо мне говорят
      .slider__buttons
        button(type="button" @click="slide('prev')").round-btn.round-btn--prev
        button(type="button" @click="slide('next')").round-btn.round-btn--next
    .slider__swiper  
      swiper(ref="slider" :options="sliderOptions").slider__list
        swiper-slide.slider__item(v-for="review in reviews" :key="review.id")
          .quote
            .quote__text
              p {{review.text}}
            .quote__user
              .user-display
                .user-display__avatar
                  .user-display__avatar-wrapper
                    img(:src="review.pic").user-display__avatar-pic
                .user-display__data
                  .user-display__name {{review.name}}
                  .user-display__occ {{review.occ}}