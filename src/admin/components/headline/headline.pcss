.headline-component {
  background-image: linear-gradient(to top, #3e3e59, #454573);
  color: #ffffff80;
}

.headline-container {
  display: flex;
  padding: 0 60px;
  align-items: center;
  height: 80px;
  justify-content: space-between;
  background-color: #43436B;
  color: white;
}

.buttons {
  margin-left: auto;
}

.btn {
  color: #fff;
  opacity: 0.9;
  text-decoration: underline;
}

.title {
  opacity: 0.5;
  margin-left: 25px;
  flex: 1;
}
